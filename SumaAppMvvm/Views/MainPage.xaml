<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SumaAppMvvm.ViewModels"
             x:Class="SumaAppMvvm.Views.MainPage"
             Title="Suma App">
    <ContentPage.BindingContext>
        <vm:SumaViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Ingrese el primer número:"
               FontSize="Medium" />
        <Entry Text="{Binding Value1}" 
               Placeholder="Número 1" 
               Keyboard="Numeric" />

        <Label Text="Ingrese el segundo número:"
               FontSize="Medium" />
        <Entry Text="{Binding Value2}" 
               Placeholder="Número 2" 
               Keyboard="Numeric" />

        <Button Text="Calcular" 
                Command="{Binding CalculateCommand}" />

        <Label Text="{Binding Result}" 
               FontSize="Medium" 
               TextColor="Red" />

        <Button Text="Limpiar" 
                Command="{Binding ClearCommand}" />
    </StackLayout>
</ContentPage>
